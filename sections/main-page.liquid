{% comment %} 1. THE HTML (THE STRUCTURE) {% endcomment %}
<div class="bundle-main-wrapper" style="background-color: {{ section.settings.section_bg }};">
  <div class="bundle-container">
    
    <div class="bundle-grid">
      <div class="flavors-column">
        <h2 class="section-title">{{ section.settings.flavor_title }}</h2>
        <div class="product-cards">
          {% for block in section.blocks %}
            <div class="flavor-card" style="background-color: {{ block.settings.card_bg }};" {{ block.shopify_attributes }}>
              <div class="badge-row">
                <span class="badge">4 PACK</span>
                {% if block.settings.sold_out %}
                  <span class="badge sold-out">SOLD OUT</span>
                {% endif %}
              </div>
              
              {% if block.settings.flavor_img != blank %}
                <img src="{{ block.settings.flavor_img | img_url: '400x' }}" alt="{{ block.settings.title }}" class="flavor-item-img">
              {% else %}
                {{ 'product-1' | placeholder_svg_tag: 'placeholder-svg flavor-item-img' }}
              {% endif %}
              
              <h3 class="flavor-name">{{ block.settings.title }}</h3>
              <div class="rating">★★★★☆ (382)</div>
              <p class="price-text">From $1.39/can</p>
              
              <button class="add-btn" {% if block.settings.sold_out %}disabled{% endif %}>
                {% if block.settings.sold_out %}SOLD OUT{% else %}ADD{% endif %}
              </button>
            </div>
          {% endfor %}
        </div>
      </div>

      <div class="bundle-sidebar">
        <div class="sidebar-card">
          <h3 class="sidebar-title">Your Bundle</h3>
          
          <div class="sidebar-step">
            <p><strong>1</strong> Select Size</p>
            <div class="size-options">
              <button class="size-box active" data-slots="3">12 PACK</button>
              <button class="size-box" data-slots="6">24 PACK</button>
              <button class="size-box" data-slots="9">36 PACK</button>
            </div>
          </div>

          <div class="sidebar-step">
            <p id="bundle-counter-text"><strong>2</strong> Choose Flavors (0/12)</p>
            <div class="slot-circles" id="bundle-slots-container">
              <div class="circle empty">+</div>
              <div class="circle empty">+</div>
              <div class="circle empty">+</div>
            </div>
          </div>

          <button class="main-cta" disabled>ADD 3 MORE 4-PACKS</button>
          <p class="shipping-note">Add $75.00 more for free shipping!</p>
        </div>
      </div>
    </div>
  </div>
</div>

{% comment %} 2. THE CSS (THE STYLE) {% endcomment %}
<style>
  .bundle-main-wrapper { padding: 40px 0; font-family: sans-serif; color: #333; }
  .bundle-container { max-width: 1200px; margin: 0 auto; padding: 0 20px; }
  .bundle-grid { display: flex; gap: 40px; align-items: flex-start; }
  .flavors-column { flex: 3; }
  .bundle-sidebar { flex: 1; position: sticky; top: 20px; }

  .product-cards { display: grid; grid-template-columns: repeat(3, 1fr); gap: 20px; }
  .flavor-card { border-radius: 15px; padding: 25px; text-align: center; position: relative; transition: transform 0.2s; }
  .flavor-card img { width: 100%; height: auto; margin: 15px 0; max-width: 180px; }
  
  .badge { background: white; padding: 4px 10px; font-size: 11px; font-weight: bold; border-radius: 4px; }
  .badge.sold-out { background: #5d635a; color: white; }

  .sidebar-card { border: 1px solid #e1e1e1; border-radius: 20px; padding: 25px; background: white; }
  .size-box { flex: 1; padding: 12px 5px; border: 1px solid #ccc; background: white; cursor: pointer; border-radius: 8px; }
  .size-box.active { border: 2px solid #000; font-weight: bold; }
  
  .slot-circles { display: flex; flex-wrap: wrap; gap: 10px; margin: 15px 0; }
  .circle { 
    width: 55px; height: 55px; border: 1px dashed #ccc; border-radius: 50%; 
    display: flex; align-items: center; justify-content: center; 
    color: #ccc; position: relative; background: #fff; overflow: visible;
  }
  .circle img { width: 100%; height: 100%; object-fit: cover; border-radius: 50%; }

  /* The Remove "X" Button */
  .remove-item {
    position: absolute; top: -5px; right: -5px;
    width: 18px; height: 18px; background: #333; color: white;
    border-radius: 50%; font-size: 12px; line-height: 18px;
    text-align: center; cursor: pointer; display: none; font-weight: bold;
    border: 1px solid white; z-index: 2;
  }
  .circle:not(.empty) .remove-item { display: block; }

  .add-btn { width: 100%; border-radius: 25px; border: 1px solid #000; padding: 10px; background: white; font-weight: bold; cursor: pointer; }
  .main-cta { width: 100%; padding: 18px; background: #99a194; color: white; border: none; border-radius: 30px; font-weight: bold; margin-top: 20px; cursor: pointer; }

  @media (max-width: 768px) { .bundle-grid { flex-direction: column; } }
</style>

{% comment %} 3. THE JAVASCRIPT (THE INTERACTIVE LOGIC) {% endcomment %}
<script>
document.addEventListener('DOMContentLoaded', function() {
  const flavorButtons = document.querySelectorAll('.add-btn');
  const sizeButtons = document.querySelectorAll('.size-box');
  const ctaButton = document.querySelector('.main-cta');
  const slotsContainer = document.getElementById('bundle-slots-container');
  const counterText = document.getElementById('bundle-counter-text');
  
  let currentCount = 0;
  let maxCans = 12;
  let totalSlots = 3;

  sizeButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      sizeButtons.forEach(b => b.classList.remove('active'));
      this.classList.add('active');
      maxCans = parseInt(this.innerText);
      totalSlots = parseInt(this.getAttribute('data-slots'));
      resetBundle();
    });
  });

  flavorButtons.forEach(btn => {
    btn.addEventListener('click', function() {
      if (currentCount < maxCans) {
        const card = this.closest('.flavor-card');
        const imgSrc = card.querySelector('.flavor-item-img').src;
        fillNextSlot(imgSrc);
        currentCount += 4;
        updateUI();
      }
    });
  });

  // REMOVE LOGIC: Using Event Delegation
  slotsContainer.addEventListener('click', function(e) {
    if (e.target.classList.contains('remove-item')) {
      const slot = e.target.parentElement;
      slot.innerHTML = '+';
      slot.classList.add('empty');
      slot.style.borderStyle = 'dashed';
      currentCount -= 4;
      updateUI();
    }
  });

  function fillNextSlot(imgSrc) {
    const emptySlot = slotsContainer.querySelector('.circle.empty');
    if (emptySlot) {
      emptySlot.innerHTML = `<span class="remove-item">×</span><img src="${imgSrc}">`;
      emptySlot.classList.remove('empty');
      emptySlot.style.borderStyle = 'solid';
    }
  }

  function updateUI() {
    counterText.innerHTML = `<strong>2</strong> Choose Flavors (${currentCount}/${maxCans})`;
    if (currentCount === maxCans) {
      ctaButton.innerText = "ADD BUNDLE TO CART";
      ctaButton.style.backgroundColor = "#000";
      ctaButton.disabled = false;
    } else {
      let packsNeeded = (maxCans - currentCount) / 4;
      ctaButton.innerText = `ADD ${packsNeeded} MORE 4-PACKS`;
      ctaButton.style.backgroundColor = "#99a194";
      ctaButton.disabled = true;
    }
  }

  function resetBundle() {
    currentCount = 0;
    slotsContainer.innerHTML = '';
    for (let i = 0; i < totalSlots; i++) {
      slotsContainer.innerHTML += '<div class="circle empty">+</div>';
    }
    updateUI();
  }
});
</script>

