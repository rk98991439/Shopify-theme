        { "type": "text", "id": "title", "label": "Flavor Name", "default": "Lemon Lime" },
        { "type": "color", "id": "card_bg", "label": "Card Background", "default": "#e1f0d7" },
        { "type": "checkbox", "id": "sold_out", "label": "Sold Out", "default": false }
      ]
    }
  ],
  "presets": [{ "name": "Custom Bundle Builder" }]
}
{% endschema %}