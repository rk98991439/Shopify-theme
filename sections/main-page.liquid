{% comment %} 1. THE HTML (THE STRUCTURE) {% endcomment %}
<div class="learning-cta-wrapper" style="background-color: {{ section.settings.bg_color }};">
  <div class="page-width">
    <h2>{{ section.settings.heading_text }}</h2>
    <p>{{ section.settings.subtext }}</p>
    <a href="{{ section.settings.button_link }}" class="custom-button">
      {{ section.settings.button_label }}
    </a>
  </div>
</div>

{% comment %} 2. THE CSS (THE STYLE) {% endcomment %}
<style>
  .learning-cta-wrapper {
    padding: 60px 20px;
    text-align: center;
    border-radius: 10px;
    margin: 20px 0;
  }
  .custom-button {
    display: inline-block;
    padding: 12px 24px;
    background: #000;
    color: #fff;
    text-decoration: none;
    border-radius: 5px;
    font-weight: bold;
  }
</style>

{% comment %} 3. THE SCHEMA (THE BRAIN) {% endcomment %}
{% schema %}
{
  "name": "Learning CTA",
  "settings": [
    {
      "type": "text",
      "id": "heading_text",
      "label": "Heading",
      "default": "Welcome to My Store"
    },
    {
      "type": "textarea",
      "id": "subtext",
      "label": "Subtext",
      "default": "Describe your brand here."
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label",
      "default": "Shop Now"
    },
    {
      "type": "color",
      "id": "bg_color",
      "label": "Background Color",
      "default": "#f4f4f4"
    }
  ],
  "presets": [
    {
      "name": "Learning CTA"
    }
  ]
}
{% endschema %}